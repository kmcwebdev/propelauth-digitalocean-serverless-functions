{
  "name": "do-functions",
  "version": "1.0.0",
  "description": "Serverless functions for propelauth",
  "main": "index.js",
  "tsup": {
    "entry": [
      "src/packages"
    ],
    "outDir": "dist/packages",
    "splitting": false,
    "sourcemap": false,
    "clean": true
  },
  "scripts": {
    "build": "tsup && cp ./config/package.json ./dist/package.json && cp project.yml ./dist/project.yml && cp .env ./dist/.env",
    "lint": "eslint --ext .ts src",
    "connect:serverless": "doctl serverless connect propelauth",
    "deploy:serverless": "pnpm build && doctl serverless deploy dist",
    "prepare": "husky install"
  },
  "author": "Christian Angelo M Sulit",
  "license": "ISC",
  "dependencies": {
    "@propelauth/node": "^2.1.1",
    "dotenv": "^16.3.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  }
}
